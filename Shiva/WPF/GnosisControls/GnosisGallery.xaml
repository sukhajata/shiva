<Border x:Class="GnosisControls.GnosisGallery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GnosisControls"
             mc:Ignorable="d" Name="Bd"
             >
    <ScrollViewer x:Name="scrollContent" 
                              Background="{Binding Background, ElementName=Bd}" 
                              CanContentScroll="false" 
                              Focusable="false" 
                              HorizontalScrollBarVisibility="Auto" 
                              SnapsToDevicePixels="True" 
                              VerticalScrollBarVisibility="Auto">
        <StackPanel Name="content"/>
    </ScrollViewer>
</Border>
